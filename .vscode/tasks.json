{
  "tasks": [
    {
      "label": "Create build folder",
      "type": "shell",
      "command": "[System.IO.Directory]::CreateDirectory('${workspaceFolder}\\bin')",
      "group": "build"
    },
    {
      "label": "Clean build folder",
      "type": "shell",
      "command": "Remove-Item -Recurse ${workspaceFolder}\\bin\\*.*",
      "group": "build",
      "dependsOn": [
        "Create build folder"
      ]
    },
    {
      "type": "cppbuild",
      "label": "C/C++: g++.exe build active file",
      "command": "C:\\MinGW\\bin\\g++.exe",
      "args": [
        // Specify folder to import header files to others:
        "-I${workspaceFolder}\\src",
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger.",
      "dependsOn": "Clean build folder"
    }
  ],
  "version": "2.0.0"
}